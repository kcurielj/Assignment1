<% include ../partials/header.ejs %>
<style>
    .p3 {
      font-family: "Lucida Console", "Courier New", monospace;
    }
    
</style>

<main class = "container">
    <div class = "row">
        <h1><%= title %></h1>
        <br>


        <div class = "table-responsive">
            <table class="table table-bordered table-striped table-hover">
                <tr>
                    <th class="text-center">Contact Name</th>
                    <th class="text-center">Contact Number</th>
                    <th class="text-center">Email Address</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>

                <% for(let count = 0; count < businesscontactsList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= businesscontactsList[count].name %> </td>
                        <td class="text-center"><%= businesscontactsList[count].number %> </td>
                        <td class="text-center"><%= businesscontactsList[count].email %> </td>
                        <td class="text-center">
                            <a href="/businesscontacts/edit/<%= businesscontactsList[count]._id %>" class = "btn btn-primary btn-sm">
                            <i class= "fas fa-pencil-alt"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/businesscontacts/delete/<%= businesscontactsList[count]._id %>" class = "btn btn-danger btn-sm">
                            <i class= "fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                <% } %>
            </table>
        </div>  
    </div>
</main>